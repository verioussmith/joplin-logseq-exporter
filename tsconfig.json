{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es2015",
    "jsx": "react",
    "allowJs": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "api": ["node_modules/@joplin/lib/services/rest/api"],
      "api/*": ["node_modules/@joplin/lib/services/rest/*"]
    },
    "lib": ["dom", "es2015"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
} 